<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:orientation="vertical"
    android:theme="@style/Theme.Design.Light.NoActionBar"
    tools:context=".regitration">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:src="@drawable/news_icon" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/login_border"
                android:drawableLeft="@drawable/pic_user"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:hint="Full Name"
                android:imeOptions="flagNoExtractUi"
                android:inputType="text"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:textAllCaps="true"
                android:textSize="25sp"
                android:windowSoftInputMode="stateVisible"
                app:layout_anchorGravity="top|center" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/login_border"
                android:drawableLeft="@drawable/email_user"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:hint="Email"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textEmailAddress"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:textAllCaps="true"
                android:textSize="25sp"
                android:windowSoftInputMode="stateVisible"
                app:layout_anchorGravity="top|center" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/login_border"
                android:drawableLeft="@drawable/lock"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:hint="Password"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textPassword"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:textAllCaps="true"
                android:textSize="25sp"
                android:windowSoftInputMode="stateVisible"
                app:layout_anchorGravity="top|center" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/login_border"
                android:drawableLeft="@drawable/phone_user"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:hint="Mobile"
                android:imeOptions="flagNoExtractUi"
                android:inputType="number"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:textAllCaps="true"
                android:textSize="25sp"
                android:windowSoftInputMode="stateVisible"
                app:layout_anchorGravity="top|center" />

            <Button
                android:id="@+id/btn_signup_reg"
                android:layout_width="245dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="112dp"
                android:layout_weight="2"
                android:background="@drawable/login_rounded_button"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:text="Sign up"
                android:textColor="#fff"
                android:textSize="25sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>